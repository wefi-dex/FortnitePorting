<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:FortnitePorting.Controls"
             xmlns:ext="clr-namespace:FortnitePorting.Extensions"
             xmlns:fortnitePorting="clr-namespace:FortnitePorting"
             x:Class="FortnitePorting.Controls.GroupBox"
             x:DataType="controls:GroupBox">
    <UserControl.Styles>
        <Style Selector="controls|GroupBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type controls:GroupBox}" >
                        <Grid>
                            <Border CornerRadius="10" Opacity="0.05" Background="White"/>
                            <Border CornerRadius="10" Opacity="0.15" BorderThickness="1" BorderBrush="#000000"/>
                            <ContentPresenter Content="{TemplateBinding Content}" Margin="{ext:Space 1}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Styles>
    
</UserControl>
