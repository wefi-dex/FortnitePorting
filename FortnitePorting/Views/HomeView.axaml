<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:FortnitePorting.ViewModels"
             xmlns:controls="clr-namespace:FortnitePorting.Controls"
             xmlns:ext="clr-namespace:FortnitePorting.Extensions"
             xmlns:views="clr-namespace:FortnitePorting.Views"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="720"
             x:Class="FortnitePorting.Views.HomeView"
             x:DataType="viewmodels:HomeViewModel">
    <controls:GroupBox Background="#26000000">
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="180"/>
                    <RowDefinition Height="{ext:Space 1}"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="{ext:Space 1}"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            
                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                    <Border RenderOptions.BitmapInterpolationMode="HighQuality" CornerRadius="5">
                        <Border.Background>
                            <ImageBrush Source="/Assets/HomeBackground.png" Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>
                    <Border Background="Black" Opacity="0.35" CornerRadius="5"/>
                    <TextBlock Text="FortnitePorting" FontSize="56" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Margin="0 80 0 0" Text="{Binding LoadingText}" Opacity="0.9" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            
                <StackPanel Grid.Row="2" Grid.Column="0">
                    <StackPanel.Styles>
                        <Style Selector="controls|GroupBox">
                            <Setter Property="Margin" Value="0 0 0 8"/>
                        </Style>
                    </StackPanel.Styles>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="{ext:Space 1}"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <controls:GroupBox Grid.Column="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="{ext:Space 1}"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
            
                                <TextBlock Grid.Row="0" FontSize="28" FontWeight="SemiBold" Text="Having Issues?" TextWrapping="Wrap"/>
                                <Button Grid.Row="2" Command="{Binding OpenDiscordCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Discord.png" Width="16" Height="16" Margin="0 0 8 0" RenderOptions.BitmapInterpolationMode="HighQuality" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock Text="Join the Support Server"/>
                                    </StackPanel>
                                    </Button>
                            </Grid>
                        </controls:GroupBox>
                        <controls:GroupBox Grid.Column="2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="{ext:Space 1}"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
            
                                <TextBlock Grid.Row="0" FontSize="28" FontWeight="SemiBold" Text="Common Errors" TextWrapping="Wrap"/>
                                <Button Grid.Row="2" Content="Open Frequently Asked Questions" Command="{Binding OpenFAQCommand}"/>
                            </Grid>
                        </controls:GroupBox>
                    </Grid>
                    <controls:GroupBox>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="{ext:Space 1}"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="{ext:Space 1}"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
            
                            <TextBlock Grid.Row="0" FontSize="28" FontWeight="SemiBold" Text="Featured Art" TextWrapping="Wrap"/>
                            <TextBlock Grid.Row="1" Opacity="0.5" Text="Created By Half"/>
                            <Image Grid.Row="3" asyncImageLoader:ImageLoader.Source="https://pbs.twimg.com/media/FrCtue-WIAEubVt?format=jpg" RenderOptions.BitmapInterpolationMode="HighQuality"/>
                        </Grid>
                    </controls:GroupBox>
                </StackPanel>
                <ItemsControl Grid.Row="2" Grid.Column="2" ItemsSource="{Binding Changelogs}">
                    <ItemsControl.Styles>
                        <Style Selector="controls|ChangelogItem">
                            <Setter Property="Margin" Value="0 0 0 8"/>
                        </Style>
                    </ItemsControl.Styles>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </controls:GroupBox>
</UserControl>
