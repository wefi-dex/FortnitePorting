<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:FortnitePorting.ViewModels"
             xmlns:controls="clr-namespace:FortnitePorting.Controls"
             xmlns:ext="clr-namespace:FortnitePorting.Extensions"
             xmlns:views="clr-namespace:FortnitePorting.Views"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="720"
             x:Class="FortnitePorting.Views.HomeView"
             x:DataType="viewmodels:HomeViewModel">
    <controls:GroupBox Background="#26000000">
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="180"/>
                    <RowDefinition Height="{ext:Space 1}"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="{ext:Space 1}"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            
                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                    <Border RenderOptions.BitmapInterpolationMode="HighQuality" CornerRadius="5">
                        <Border.Background>
                            <ImageBrush Source="/Assets/HomeBackground.png" Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>
                    <Border Background="Black" Opacity="0.35" CornerRadius="5"/>
                    <TextBlock Text="FortnitePorting" FontSize="56" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Margin="0 80 0 0" Text="{Binding LoadingText}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            
                <StackPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <StackPanel.Styles>
                        <Style Selector="controls|GroupBox">
                            <Setter Property="Margin" Value="0 0 0 8"/>
                        </Style>
                    </StackPanel.Styles>
                    <controls:GroupBox>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="{ext:Space 1}"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
            
                            <TextBlock Grid.Row="0" FontSize="28" FontWeight="SemiBold" Text="Having Issues?" TextWrapping="Wrap"/>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="{ext:Space 1}"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Command="{Binding OpenDiscordCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Discord.png" Width="16" Height="16" Margin="0 0 8 0" RenderOptions.BitmapInterpolationMode="HighQuality" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock Text="Join the Support Server"/>
                                    </StackPanel>
                                </Button>
                                <Button Grid.Column="2" Command="{Binding OpenFAQCommand}">
                                    <controls:MaterialIconText Text="Open Frequently Asked Questions" Icon="QuestionMark"/>
                                </Button>
                            </Grid>
                        </Grid>
                    </controls:GroupBox>
                    <controls:GroupBox>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="{ext:Space 1}"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="{ext:Space 1}"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
            
                            <TextBlock Grid.Row="0" FontSize="28" FontWeight="SemiBold" Text="Featured Art" TextWrapping="Wrap"/>
                            <TextBlock Grid.Row="1" Opacity="0.5">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Created By: {0}">
                                        <Binding Path="FeaturedArtist" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <Border Grid.Row="3" RenderOptions.BitmapInterpolationMode="HighQuality" CornerRadius="5">
                                <Border.Background>
                                    <ImageBrush Source="{Binding ElementName=FeaturedArtFrame, Path=Source}" Stretch="UniformToFill"/>
                                </Border.Background>
                                
                                <!-- scuffed but gets proper image sizing for background brush while keeping corner radius-->
                                <Image x:Name="FeaturedArtFrame" Opacity="0" asyncImageLoader:ImageLoader.Source="{Binding FeaturedArtURL}"/>
                            </Border>
                            </Grid>
                    </controls:GroupBox>
                </StackPanel>
                <ItemsControl Grid.Row="2" Grid.Column="2" ItemsSource="{Binding Changelogs}">
                    <ItemsControl.Styles>
                        <Style Selector="controls|ChangelogItem">
                            <Setter Property="Margin" Value="0 0 0 8"/>
                        </Style>
                    </ItemsControl.Styles>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </controls:GroupBox>
</UserControl>
