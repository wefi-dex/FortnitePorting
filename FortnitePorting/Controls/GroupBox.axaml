<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:FortnitePorting.Controls"
             xmlns:ext="clr-namespace:FortnitePorting.Framework.Extensions;assembly=FortnitePorting.Framework"
             x:Class="FortnitePorting.Controls.GroupBox"
             x:DataType="controls:GroupBox" Background="#10FFFFFF" BorderBrush="#10FFFFFF" CornerRadius="10">
    <UserControl.Styles>
        <Style Selector="controls|GroupBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type controls:GroupBox}">
                        <Grid>
                            <Border RenderOptions.EdgeMode="Antialias" CornerRadius="{TemplateBinding CornerRadius}"
                                    Background="{TemplateBinding Background}" />
                            <Border RenderOptions.EdgeMode="Antialias" CornerRadius="{TemplateBinding CornerRadius}"
                                    BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}" />
                            <ContentControl Content="{TemplateBinding Content}" Margin="{ext:Space 1}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Styles>

</UserControl>