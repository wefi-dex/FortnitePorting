<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:FortnitePorting.Controls"
             xmlns:ext="clr-namespace:FortnitePorting.Extensions"
             xmlns:fortnitePorting="clr-namespace:FortnitePorting"
             x:Class="FortnitePorting.Controls.GroupBox"
             x:DataType="controls:GroupBox" Background="#10FFFFFF" BorderBrush="#10FFFFFF">
    <UserControl.Styles>
        <Style Selector="controls|GroupBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type controls:GroupBox}" >
                        <Grid>
                            <Border RenderOptions.EdgeMode="Antialias" CornerRadius="10" Background="{TemplateBinding Background}"/>
                            <Border RenderOptions.EdgeMode="Antialias" CornerRadius="10" BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}"/>
                            <ContentControl Content="{TemplateBinding Content}" Margin="{ext:Space 1}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Styles>
    
</UserControl>
